{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/shared/components/*"
      ],
      "@contexts/*": [
        "src/shared/contexts/*"
      ],
      "@hooks/*": [
        "src/shared/hooks/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@services/*": [
        "src/shared/services/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@customTypes/*": [
        "src/shared/customTypes/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
